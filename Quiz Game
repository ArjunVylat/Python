print('Welcome to my computer quiz!')

playing = input("Do you want to play? ")

if playing.lower() != "yes":
    quit()
print("Okay, Let's play! : )" )
score = 0
answer = input("What is the orange part of an egg called? ")

if answer.lower() == "york":
    print("Correct!")
    score += 1
else:
    print("Incorrect!")


answer = input("How many legs do insects have? ")

if answer.lower() == "six":
    print("Correct!")
    score += 1
else:
    print("Incorrect!")

answer = input("What is a baby kangaroo called? ")

if answer.lower() == "joey":
    print("Correct!")
    score += 1
else:
    print("Incorrect!")

answer = input("What is the closest planet to the Sun? ")

if answer.lower() == "mercury":
    print("Correct!")
    score += 1
else:
    print("Incorrect!")

answer = input("In which country can you find the Eiffel Tower? ")

if answer.lower() == "france":
    print("Correct!")
    score += 1
else:
    print("Incorrect!")

print("You got "+str(score)+" questions correct. ")
print("You got "+str((score / 4) * 100)+ "%. ")